# Root Environment Variables (Example)

# Server
SERVER_PORT=5000
NODE_ENV=development
MONGO_URI=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/<db>?retryWrites=true&w=majority
JWT_SECRET=change-me-in-production
JWT_EXPIRE=7d
GOOGLE_BOOKS_API_KEY=your-google-books-api-key

# Client (Create React App requires REACT_APP_ prefix)
PORT=3000
REACT_APP_API_URL=http://localhost:5000/api
REACT_APP_GOOGLE_BOOKS_API_KEY=your-google-books-api-key
